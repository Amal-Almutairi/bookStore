@{
    var products = (List<ProductModel>)ViewData["products"];
    Layout = "_LayoutDesign";
}

<h1 style="text-align: center">Books</h1>
<table class="table table-striped table-hover" style="text-align: center">
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Image</th>
        <th scope="col">Show</th>
    </tr>
    @foreach (var item in products)
    {
        <tr>
            <td> @item.Id</td>
            <td> @item.Title</td>
            <td>@item.Price</td>
            <td><img src="@item.Image" alt="@item.Image" width="150px" height="200px" /></td>
            <td><button class="btn btn-outline-info"><a href="/Products/Details/ @item.Id"> show</button></td>
        </tr>
    }
</table>